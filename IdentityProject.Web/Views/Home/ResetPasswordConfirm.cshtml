@model IdentityProject.Web.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (ViewBag.status == "success")
        {
            <div class="alert alert-success">Password changed successfully. <a class="text-decoration-none" asp-action="LogIn">Login</a></div>
        }
        else
        {
            <h4>New Password</h4>
            <hr />
            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Confirm" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>