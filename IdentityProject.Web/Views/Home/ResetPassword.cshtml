@model IdentityProject.Web.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPassword";
}


<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (ViewBag.status == "success")
        {
             <div class="alert alert-success">The password reset link has been sent to your email.</div>
        }
        else
        {
            <h4>Forget My Password</h4>
            <hr />
            <div class="alert alert-info">Enter the email address associated with your account.</div>
            <form asp-action="ResetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Continue" class="btn btn-primary" />
                </div>
            </form>
        }
        
    </div>
</div>


