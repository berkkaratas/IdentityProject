@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_MemberLayout";
}

<h3 class="text-center">Profile</h3>
<div class="row">
    <div class="col-sm-3">
        <img src="@Model.Picture" style="height: 150px; width: 150px;" class="rounded" alt="Profile Photo"/>
    </div>
    <div class="col-sm-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>UserName</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>@if (!String.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        @Model.PhoneNumber
                    }
                    else
                    {
                        <span>None</span>
                    }
                    
                </td>
            </tr>
        </table>
    </div>

</div>
