@model List<AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "_AdminLayout";
}
<h3 class="text-center">Roles</h3>
<hr />
<table class="table table-striped table-borderless">
    <tr>
        <th>Id</th>
        <th>Rol Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="3">There is no role</td>
        </tr>
    }
    else
    {
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="RoleDeleted" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </td>
                <td>
                    <form asp-action="RoleUpdated" asp-route-id="@role.Id" method="get">
                        <button typ class="btn btn-outline-warning">Update</button>
                    </form>
                </td>
            </tr>
        }
    }

</table>
<a asp-action="RoleCreate" class="btn btn-outline-info">Create Role</a>
