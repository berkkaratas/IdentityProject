@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "_AdminLayout";
}
<h3 class="text-center">Users</h3>
<hr />
<table class="table table-bordered table-striped">
    <tr>
        <th>User Name</th>
        <th>User Email</th>
        <th>Roles</th>
        <th>Assign Role</th>
    </tr>
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="3">There is no member</td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td user-roles="@user.Id"></td>
                <td><a class="btn btn-outline-secondary" asp-action="RoleAssign" asp-route-id="@user.Id">Assign Role</a></td>
            </tr>
        }
    }
</table>


